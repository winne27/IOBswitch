<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/config_switch_enabled"
        android:layout_width="25dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        android:padding="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/config_switch_unit"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#008"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/config_switch_name"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:ems="10"
        android:inputType="text" />

    <Spinner
        android:id="@+id/config_switch_cmd"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:prompt="@string/commandsPrompt"
        android:spinnerMode="dialog"
        android:entries="@array/commands" />

    <Spinner
        android:id="@+id/config_switch_confirm"
        android:layout_height="wrap_content"
        android:layout_width="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/config_switch_remove"
        android:layout_width="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        android:text="@string/removeline"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>
