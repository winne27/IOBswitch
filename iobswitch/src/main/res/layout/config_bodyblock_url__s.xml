<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/url_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="13dp"
            android:paddingTop="6dp"
            android:text="@string/url_fhem_js"
            style="@style/Labelsmall" />

        <EditText
            android:id="@+id/urljs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:inputType="text"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="13dp"
                android:paddingTop="6dp"
                android:text="@string/url_fhem_js_local"
                style="@style/Labelsmall" />
            <Button
                android:id="@+id/help_homenet"
                style="@style/Config.Button.Help"
                android:layout_margin="2dp"
                android:layout_marginStart="8dp"
                android:text="\?" />
        </LinearLayout>

        <EditText
            android:id="@+id/urljs_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:inputType="text"
            android:textSize="15sp" />

        <!-- connection password +++++++++++++++++++++++++++++++++++++++++++++++++++++++++- -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="13dp"
            android:paddingTop="6dp"
            android:text="@string/conn_pw"
            style="@style/Labelsmall" />

        <EditText
            android:id="@+id/connection_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <!-- URL for node.pl ++++++++++++++++++++++++++++++++++++++++++++++++++++ -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="13dp"
            android:paddingTop="6dp"
            android:text="@string/url_fhem_pl"
            style="@style/Labelsmall" />

        <EditText
            android:id="@+id/urlpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:inputType="textUri"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="13dp"
            android:paddingTop="6dp"
            android:text="@string/url_fhem_pl_local"
            style="@style/Labelsmall" />

        <EditText
            android:id="@+id/urlpl_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:inputType="textUri"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/is_home_net_row"
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content">

             <TextView
                android:id="@+id/is_home_net_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_home_net"
                style="@style/Labelsmall" />

            <CheckBox
                android:id="@+id/is_home_net"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel2_config"
                style="@style/Config.Button"
                android:layout_marginEnd="6dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/get_config"
                style="@style/Config.Button"
                android:layout_marginStart="6dp"
                android:text="@string/getConfig" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>