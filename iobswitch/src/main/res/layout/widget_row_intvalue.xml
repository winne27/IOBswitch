<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intvalue_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/intvalue_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:textColor="@color/widget_default_color"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/intvalue_down_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/myshape_proz_down"
        android:padding="3dp"
        android:contentDescription="@string/control"
        android:src="@drawable/arrow_left_double" />

    <ImageView
        android:id="@+id/intvalue_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/myshape_proz_down"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="6dp"
        android:paddingEnd="7dp"
        android:contentDescription="@string/control"
        android:src="@drawable/arrow_left" />

    <TextView
        android:id="@+id/intvalue_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/widget_default_color"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/intvalue_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/myshape_proz_up"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="7dp"
        android:paddingEnd="6dp"
        android:contentDescription="@string/control"
        android:src="@drawable/arrow_right" />

    <ImageView
        android:id="@+id/intvalue_up_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/myshape_proz_up"
        android:padding="3dp"
        android:contentDescription="@string/control"
        android:src="@drawable/arrow_right_double" />
</LinearLayout>
