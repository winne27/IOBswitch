<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/config_value_enabled"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/config_value_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.37"
        android:textAllCaps="false"
        android:textColor="#008"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/config_value_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.37"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/config_value_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="#008"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/config_value_useicon"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/config_value_remove"
        android:layout_width="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_height="wrap_content"
        android:text="@string/removeline"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>