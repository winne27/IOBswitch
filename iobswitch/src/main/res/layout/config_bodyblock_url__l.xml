<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/url_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:paddingEnd="13dp"
                    android:paddingTop="6dp"
                    android:text="@string/url_fhem_js"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/urljs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:inputType="text"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right">

                    <Button
                        android:id="@+id/help_homenet"
                        style="@style/Config.Button.Help"
                        android:layout_margin="2dp"
                        android:layout_marginEnd="8dp"
                        android:text="\?" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="13dp"
                        android:paddingTop="6dp"
                        android:text="@string/url_fhem_js_local"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/urljs_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:inputType="text"
                    android:textSize="15sp" />
            </TableRow>

            <!-- connection password +++++++++++++++++++++++++++++++++++++++++++++++++++++++++- -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:paddingEnd="13dp"
                    android:paddingTop="6dp"
                    android:text="@string/conn_pw"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/connection_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </TableRow>

            <!-- URL for node.pl ++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:paddingEnd="13dp"
                    android:paddingTop="6dp"
                    android:text="@string/url_fhem_pl"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/urlpl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:inputType="textUri"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:paddingEnd="13dp"
                    android:paddingTop="6dp"
                    android:text="@string/url_fhem_pl_local"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/urlpl_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:inputType="textUri"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:id="@+id/is_home_net_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/is_home_net"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|right"
                    android:paddingEnd="10dp" />

                <TextView
                    android:id="@+id/is_home_net_label"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:paddingTop="6dp"
                    android:text="@string/is_home_net"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel2_config"
                style="@style/Config.Button"
                android:layout_marginEnd="8dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/get_config"
                style="@style/Config.Button"
                android:layout_marginStart="8dp"
                android:text="@string/getConfig" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>