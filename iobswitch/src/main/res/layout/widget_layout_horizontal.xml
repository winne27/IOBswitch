<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainshape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_shape"
        android:orientation="vertical">

        <include layout="@layout/message" />

        <include layout="@layout/new_version" />


        <LinearLayout

            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="0dp">

            <include
                android:id="@+id/horizontal_listview_0"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_1"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_2"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_3"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_4"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_5"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_6"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_7"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_8"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_9"
                layout="@layout/widget_listview_horizontal" />

            <include
                android:id="@+id/horizontal_listview_10"
                layout="@layout/widget_listview_horizontal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>